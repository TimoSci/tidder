<h2>Edit Topic</h2>

<form action="/topics/<%= @topic.slug %>/new_subtopic" method="GET">
  <input type="submit" value="Create new subtopic">
</form>

<form action="/topics/<%= @topic.slug %>" method="POST">
  <input type="hidden" name="_method" value="delete">
  <input type="submit" value="Delete Topic">
</form>



<form action="/topics/<%= @topic.slug %>" method="post">

  <h3>Topic Name:</h3>

  <input type="text" name="topic[name]" value="<%= @topic.name %>">

  <h3>About:</h3>

  <textarea name="topic[about]" rows="8" cols="40"><%= @topic.about %></textarea>

  <h3>Select Owner:</h3>


    <% User.all.each do |user|  %>
      <label>
       <input type="radio" name="topic[user_id]" value="<%= user.id%>" <%= "checked" if @topic.owner == user %> >
       <%= user.name %>
      </label>
      <br/>
    <% end %>

    <br/>

   <input type="submit" value="submit">

</form>
